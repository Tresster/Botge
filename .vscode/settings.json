{
  "telemetry.feedback.enabled": false,

  "git.alwaysSignOff": true,
  "git.autofetch": true,
  "git.enableCommitSigning": true,

  "npm.packageManager": "npm",
  "npm.scriptRunner": "npm",

  "js/ts.implicitProjectConfig.module": "NodeNext",
  "js/ts.implicitProjectConfig.target": "ESNext",

  "typescript.check.npmIsInstalled": true,
  "typescript.preferences.importModuleSpecifierEnding": "js",
  "typescript.preferences.preferTypeOnlyAutoImports": true,
  "typescript.preferences.quoteStyle": "single",
  "typescript.format.semicolons": "insert",

  "docker.lsp.experimental.vulnerabilityScanning": true,
  "docker.lsp.experimental.scout.notPinnedDigest": true,
  "docker.lsp.experimental.scout.recommendedTag": true,
  "docker.lsp.telemetry": "error",

  "eslint.runtime": "node",
  "eslint.options": {
    "flags": ["unstable_native_nodejs_ts_config"]
  },

  "prettier.requireConfig": true,
  "prettier.configPath": ".prettierrc.json",

  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,

  "markdownlint.config": {
    "$schema": "https://raw.githubusercontent.com/DavidAnson/markdownlint/v0.39.0/schema/markdownlint-config-schema-strict.json",

    "MD001": true,
