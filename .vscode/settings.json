{
  "workbench.startupEditor": "none",
  "workbench.iconTheme": "vscode-icons",

  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.suggest.enabled": true,

  "github.copilot.enable": {
    "*": false
  },
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  "github.copilot.nextEditSuggestions.enabled": false,
  "github.copilot.chat.codesearch.enabled": true,
  "github.copilot.chat.editor.temporalContext.enabled": true,
  "github.copilot.chat.edits.temporalContext.enabled": true,
  "github.copilot.chat.languageContext.fix.typescript.enabled": true,
  "github.copilot.chat.languageContext.inline.typescript.enabled": true,
  "github.copilot.chat.languageContext.typescript.enabled": true,
  "github.copilot.chat.languageContext.typescript.includeDocumentation": true,

  "telemetry.feedback.enabled": false,
  "files.autoSave": "onFocusChange",

  "git.alwaysSignOff": false,
  "git.autofetch": true,
  "git.enableCommitSigning": true,
  "diffEditor.ignoreTrimWhitespace": false,

  "npm.packageManager": "npm",
  "npm.scriptRunner": "npm",

  "js/ts.implicitProjectConfig.module": "NodeNext",
  "js/ts.implicitProjectConfig.target": "ESNext",

  "typescript.check.npmIsInstalled": true,
  "typescript.preferences.importModuleSpecifierEnding": "js",
  "typescript.preferences.preferTypeOnlyAutoImports": true,
  "typescript.preferences.quoteStyle": "single",
  "typescript.format.semicolons": "insert",

  "docker.lsp.experimental.vulnerabilityScanning": true,
  "docker.lsp.experimental.scout.notPinnedDigest": false,
  "docker.lsp.experimental.scout.recommendedTag": true,
  "docker.lsp.telemetry": "error",

  "eslint.runtime": "node",
  "eslint.options": {
    "flags": ["unstable_native_nodejs_ts_config"]
  },

  "prettier.requireConfig": true,
  "prettier.configPath": ".prettierrc.json",

  "redhat.telemetry.enabled": false,
  "yaml.format.printWidth": 120,
  "yaml.format.singleQuote": true,

  "bookmarks.saveBookmarksInProject": true,
  "bookmarks.experimental.enableNewStickyEngine": true,
  "bookmarks.keepBookmarksOnLineDelete": true, // ! needed for agents
  "bookmarks.useWorkaroundForFormatters": false,
  "bookmarks.sideBar.countBadge": "off",
  "bookmarks.sideBar.expanded": false,
  "bookmarks.revealLocation": "center",

  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,

  "cSpell.validateDirectives": false,
  "cSpell.dictionaries": ["typescript"],
  "cSpell.ignoreRandomStrings": true,
  "cSpell.ignoreWords": [
    // Commands
    "shortestuniquesubstrings",
    "findtheemoji",
    "emotelist",
    "medialist",
    "addemote",
    "pinglist",
    "pingme",

    "fullsize",
    "tinygif",

